---
const { title, url, description, tags = [], image, featured = false } = Astro.props;
---

<li class="studio-card">
  <a
    href={url}
    title={title}
    class="group bg-card/80 backdrop-blur-2xl p-2 rounded-2xl shadow-massive ring-white/10 ring-1 flex flex-col h-full justify-between">
    <article class="flex-1 h-full flex flex-col">
      <div class="block w-full lg:col-span-2 relative">
        <img
          class="aspect-[384/246] object-cover bg-center h-full rounded-2xl"
          src={image}
          alt={title}
        />
        {featured && (
          <div class="absolute top-3 left-3 bg-vanta-500 text-white text-xs font-bold px-2 py-1 rounded-md">
            Top Pick
          </div>
        )}
      </div>
      <div
        class="flex flex-col items-start justify-between flex-1 w-full mt-4 p-4">
        <div class="w-full">
          <div>
            <p class="text-lg font-display text-white lg:text-xl studio-title">{title}</p>
          </div>
          <p class="mt-2 text-sm text-vanta-600 line-clamp-3 studio-description">
            {description}
          </p>
        </div>
        {tags.length > 0 && (
          <footer class="w-full mt-4">
            <ul class="flex flex-wrap gap-2 studio-tags" role="list">
              {tags.map((tag) => (
                <li
                  class="rounded-lg text-xs px-4 py-1
                  transition-all flex items-center justify-center text-white bg-gradient-to-b from-white/[.105] to-white/[.15] hover:to-white/[.25] h-6 ring-1 ring-inset ring-white/10">
                  {tag}
                </li>
              ))}
            </ul>
          </footer>
        )}
      </div>
    </article>
  </a>
</li>
