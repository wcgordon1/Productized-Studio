                  <label
                    name="name"
                    class="block mb-3 text-sm text-white sr-only">
                    First name
                  </label>
                  <input
                    type="text"
                    placeholder="Your name"
                    class="block w-full h-10 px-4 py-3 bg-transparent border rounded-lg appearance-none text-vanta-300 border-white/10 placeholder-white/50 focus:border-vanta-300 focus:bg-transparent focus:outline-none focus:ring-vanta-300 sm:text-sm"
