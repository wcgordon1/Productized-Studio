---
const { courseTtitle, url, intro, level, price } = Astro.props;
---

<li
  class="bg-card/80 backdrop-blur-2xl p-8 rounded-2xl shadow-massive ring-white/10 ring-1 flex flex-col h-full justify-between">
  <div>
    <p class="text-lg font-display text-white lg:text-xl">
      {courseTtitle}
    </p>

    <div class="inline-flex mt-8 items-center gap-2 w-full">
      <div>
        <span
          class="inline-flex gap-2 items-center rounded-md bg-vanta-800 px-2 py-1 text-xs text-white ring-1 ring-inset ring-white/10">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-school h-4 w-4"
            viewBox="0 0 24 24"
            stroke-width="1.25"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path
              stroke="none"
              d="M0 0h24v24H0z"
              fill="none"
            ></path>
            <path d="M22 9l-10 -4l-10 4l10 4l10 -4v6"></path>
            <path d="M6 10.6v5.4a6 3 0 0 0 12 0v-5.4"></path>
          </svg>
          <span>{level}</span>
        </span>
      </div>
      <div>
        <p
          class="inline-flex gap-2 items-center rounded-md px-2 py-1 text-xs text-white">
          <span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-star fill-white"
              width="12"
              height="12"
              viewBox="0 0 24 24"
              stroke-width="1.25"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round">
              <path
                stroke="none"
                d="M0 0h24v24H0z"
                fill="none"
              ></path>
              <path
                d="M12 17.75l-6.172 3.245l1.179 -6.873l-5 -4.867l6.9 -1l3.086 -6.253l3.086 6.253l6.9 1l-5 4.867l1.179 6.873z"
              ></path>
            </svg>
          </span>
          <span>{price}</span>
        </p>
      </div>
    </div>

    <p class="mt-8 text-sm text-vanta-300">
      {intro}
    </p>
  </div>
  <div class="mt-12">
    <a
      href={url}
      title={courseTtitle}
      class="rounded-lg px-4 py-2 justify-between text-sm transition-all flex items-center text-white bg-gradient-to-b from-white/[.105] to-white/[.15] hover:to-white/[.25] h-10 ring-1 ring-inset ring-white/10">
      Enroll today <span>{price}</span>
    </a>
  </div>
</li>
