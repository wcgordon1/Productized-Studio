---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section>
    <div
      class="px-8 py-24 mx-auto md:px-12 lg:px-32 max-w-7xl lg:pt-0 lg:pb-24">
      <div>
        <img
          class="h-32 w-full object-cover lg:h-48 ring-1 ring-white/20 rounded-3xl"
          src="https://images.unsplash.com/photo-1502239608882-93b729c6af43?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
          alt=""
        />
      </div>
      <div class="max-w-3xl mx-auto">
        <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
          <div class="-mt-12 sm:-mt-16 sm:flex sm:items-end">
            <div class="flex">
              <img
                class="h-24 w-24 rounded-full ring-1 ring-white/20 sm:h-32 sm:w-32 bg-card"
                src={frontmatter.avatar.url}
                alt={frontmatter.avatar.alt}
              />
            </div>
          </div>
        </div>
        <div class="prose-styles mx-auto mt-12">
          <h2 class="font-display">{frontmatter.name} - {frontmatter.role}</h2>

          <p>
            <slot />
          </p>
          <p>
            Connect with Sarah on LinkedIn to stay updated on her latest
            insights and industry contributions.
          </p>
        </div>
        <div class="mt-12">
          <p class="text-lg font-display text-white lg:text-xl">Skills</p>
          <ul
            class="list-none text-vanta-300 gap-2 justify-center mt-4 grid grid-cols-1 md:grid-cols-2">
            {
              frontmatter.skills.map((skill) => (
                <>
                  <li class="inline-flex items-center gap-2">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="icon icon-tabler icon-tabler-discount-check h-4 w-4"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round">
                      <path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      />
                      <path d="M5 7.2a2.2 2.2 0 0 1 2.2 -2.2h1a2.2 2.2 0 0 0 1.55 -.64l.7 -.7a2.2 2.2 0 0 1 3.12 0l.7 .7c.412 .41 .97 .64 1.55 .64h1a2.2 2.2 0 0 1 2.2 2.2v1c0 .58 .23 1.138 .64 1.55l.7 .7a2.2 2.2 0 0 1 0 3.12l-.7 .7a2.2 2.2 0 0 0 -.64 1.55v1a2.2 2.2 0 0 1 -2.2 2.2h-1a2.2 2.2 0 0 0 -1.55 .64l-.7 .7a2.2 2.2 0 0 1 -3.12 0l-.7 -.7a2.2 2.2 0 0 0 -1.55 -.64h-1a2.2 2.2 0 0 1 -2.2 -2.2v-1a2.2 2.2 0 0 0 -.64 -1.55l-.7 -.7a2.2 2.2 0 0 1 0 -3.12l.7 -.7a2.2 2.2 0 0 0 .64 -1.55v-1" />
                      <path d="M9 12l2 2l4 -4" />
                    </svg>{" "}
                    {skill}
                  </li>
                </>
              ))
            }
          </ul>
        </div>
        <div class="mt-12">
          <p class="text-lg font-display text-white lg:text-xl">Courses</p>
        </div>
      </div>
      <ul
        class="grid grid-cols-1 relative lg:grid-cols-3 mt-12 list-none gap-2"
        role="list">
        {
          frontmatter.courses.map((course) => (
            <>
              <li class="h-full p-2 bg-gradient-to-t from-white/20 ring-1 ring-white/10 rounded-3xl">
                <div class="flex flex-col justify-between h-full p-4 overflow-hidden shadow-massive ring-1 ring-white/10 rounded-2xl bg-card">
                  <div>
                    <div class="inline-flex justify-between items-start gap-4 w-full">
                      <div class="order-first">
                        <p class="text-lg  font-display text-white lg:text-xl">
                          {course.title}
                        </p>
                      </div>
                    </div>

                    <p class="mt-8 text-sm text-vanta-300">
                      {course.description}
                    </p>
                  </div>
                  <div class="mt-12">
                    <a
                      href={course.url}
                      class="rounded-lg px-4 py-2 justify-between text-sm transition-all flex items-center text-white bg-gradient-to-b from-white/[.105] to-white/[.15] hover:to-white/[.25] h-10 ring-1 ring-inset ring-white/10">
                      Enroll today <span>{course.price}</span>
                    </a>
                  </div>
                </div>
              </li>
            </>
          ))
        }
      </ul>
    </div>
  </section>
</BaseLayout>
